<h1>Book List</h1>
<%= link_to "Add New Book", new_book_path, class: "btn btn-borrow" %>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Available</th>
    <th>Actions</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td><%= book.author %></td>
      <td><%= book.available? ? "Yes" : "No" %></td>
      <td class="action-buttons">
        <%= link_to "Edit", edit_book_path(book), class: "btn btn-edit" %>
        <%= button_to "Delete", book_path(book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-delete" %>
        <% if book.available? %>
          <%= link_to "Borrow", borrow_book_path(book), method: :post, class: "btn btn-borrow" %>
        <% else %>
          <%= link_to "Return", return_book_path(book), method: :post, class: "btn btn-return" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
