<h1>Edit Book</h1>

<%= form_with model: @book, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>

  <div>
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<%= link_to "Back to Books", books_path %>
